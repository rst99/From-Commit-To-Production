<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/CustomActionMode</item>
    </style>

    <style name="CustomActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/primary</item>
    </style>


    <item name="primary" type="color">#007000</item>
    <item name="primary_dark" type="color">#0a2e08</item>
    <item name="primary_light" type="color">#a670b4</item>
    <item name="accent" type="color">#b7aa61</item>

</resources>
